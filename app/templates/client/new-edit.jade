        label.item.item-input.item-stacked-label
          span.input-label {{::("client.notas"|translate)}}
          input(
            type="text"
            ng-model="clientsVm.client.notas"
          )
        .errors-wrapper
          show-error(array-messages="clientsVm.messages.notas")

    .bar.bar-footer.bar-stable
      button.button.button-small.button-outline.button-energized(
        type="submit"
        ng-disabled="clientsVm.clientForm.$invalid"
      ) {{::("globals.save"|translate)}}
