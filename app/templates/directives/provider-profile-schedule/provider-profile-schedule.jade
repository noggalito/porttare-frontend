span.office-schedule(
  ng-if="::ppSVm.openingTime"
)
  | {{ ::ppSVm.openingTime | toDate:'timeSchedule' | formatDate:'HH:mm' }}
  | -
  | {{ ::ppSVm.closingTime | toDate:'timeSchedule' | formatDate:'HH:mm' }}
span(
  ng-if="ppSVm.fromDay"
) {{ ::ppSVm.fromDay }}-
span(
  ng-if="ppSVm.toDay"
) {{ ::ppSVm.toDay }}
