.office-schedule(
  ng-if="::(ppSVm.openingTime && ppSVm.isOpen)"
)
  span.i.icon.ion-clock
  | {{ ::ppSVm.openingTime | toDate:'timeSchedule' | formatDate:'HH:mm' }}
  | -
  | {{ ::ppSVm.closingTime | toDate:'timeSchedule' | formatDate:'HH:mm' }}

.office-status-text(
  ng-if="::ppSVm.isOpen"
)
  i.i.icon.ion-record
  | {{ ::("provider.schedule.open" | translate) }}
.office-status-text.closed(
  ng-if="::!ppSVm.isOpen"
)
  i.i.icon.ion-ios-circle-outline
  | {{ ::("provider.schedule.closed" | translate) }}
