ion-view(
  view-title='{{::("actions.newProvider"|translate)}}'
)
  ion-nav-title
    .alt-logo
  ion-content.resource-form
    .row
      form(name="newProviderForm" ng-submit='providerVm.nexStep()', novalidate='')
        .list.list-inset
          legend {{::("provider.formLegendFirts"|translate)}}

          label.item.item-input.item-stacked-label(
            ng-class="{'item-error': providerVm.messages.ruc}"
          )
            span.input-label RUC
            input(
              type='text',
              name='ruc',
              ng-model='providerVm.providerForm.ruc',
              ng-class='input-error'
            )
          show-error(array-messages='providerVm.messages.ruc')
          
          label.item.item-input.item-stacked-label(
            ng-class="{'item-error': providerVm.messages.razon_social}"
          )
            span.input-label {{::("provider.businessName"|translate)}}
            input(
              type='text',
              placeholder='',
              name='razon_social',
              ng-model='providerVm.providerForm.razon_social'
            )
          show-error(array-messages='providerVm.messages.razon_social')
          
          label.item.item-input.item-stacked-label(
           ng-class="{'item-error': providerVm.messages.nombre_establecimiento}"
          )
           span.input-label {{::("provider.name"|translate)}}
           input(
             type='text',
             name='nombre_establecimiento',
             ng-model='providerVm.providerForm.nombre_establecimiento',
             ng-class='input-error'
           )
          
          label.item.item-input.item-stacked-label(
            ng-class="{'item-error': providerVm.messages.actividad_economica}"
          )
            span.input-label {{::("provider.economicActivity"|translate)}}
            input(
              type='text',
              placeholder='',
              name='actividad_economica',
              ng-model='providerVm.providerForm.actividad_economica'
            )
          show-error(array-messages='providerVm.messages.actividad_economica')  
          
          label.item.item-input.item-stacked-label
            span.input-label {{::("provider.LegalRepresentative"|translate)}}
            input(
              type='text',
              placeholder='',
              name='representante_legal',
              ng-model='providerVm.providerForm.representante_legal'
            )
          
          label.item.item-input.item-stacked-label(
            ng-class="{'item-error': providerVm.messages.telefono}"
          )
            span.input-label {{::("provider.phone"|translate)}}
            input(
              type='tel',
              placeholder='',
              name='telefono',
              ng-model='providerVm.providerForm.telefono'
            )
          show-error(array-messages='providerVm.messages.telefono')
          
          label.item.item-input.item-stacked-label(
            ng-class="{'item-error': providerVm.messages.email}"
          )
            span.input-label {{::("provider.email"|translate)}}
            input(
              type='email',
              placeholder='user@mydomain.com',
              name='email',
              ng-model='providerVm.providerForm.email'
            )
          show-error(array-messages='providerVm.messages.email')
          
          label.item.item-input.item-stacked-label
            span.input-label {{::("provider.webSite"|translate)}}
            input(
              type='text',
              placeholder='',
              name='website',
              ng-model='providerVm.providerForm.website'
            )
          
          label.item.item-input
            span.input-label {{::("provider.methodPayment"|translate)}}
            ion-list
              ion-checkbox(
                ng-repeat="method in providerVm.methodsPayment",
                ng-checked="providerVm.selections.indexOf(method.value) != -1"
                ng-click="providerVm.toggleCheck(method)"
              ) {{ ::method.label }}
          
          label.item.item-input
            span.input-label {{::("provider.logo"|translate)}}
            input(
              type='file'
              ngf-select
              ng-model="itemsVm.item.imagen"  
              accept="image/*"
            )
        .bar.bar-footer.bar-stable
          button.button.button-outline.button-energized(
            type='submit',
            ng-class='{disabled: newProviderForm.$invalid}'
          )
            | Siguiente paso
