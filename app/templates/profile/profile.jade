ion-content(scroll="false")
  .profile-page
    .profile-header.responsive-sm
      .col.col-offset-25.col-50
        img.img-profile( ng-src="{{ siteVm.getUserImageURL() }}" )
      .user-name
        |{{ siteVm.userName() }}
    .profile-body
      ion-tabs.state-tabs
        ion-tab(
        title="{{::('profile.tabs.info'|translate)}}"
        ui-sref="app.profile.info"
        )
          ion-nav-view(name='menuContent@profileInfo')
        ion-tab(
        title="{{::('profile.tabs.addresses'|translate)}}"
        ui-sref="app.profile.addresses.index"
        )
          ion-nav-view(name='menuContent@addressesIndex')
