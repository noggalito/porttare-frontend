ion-view(
  view-title="Login",
  hide-nav-bar="true"
)
  ion-content.login-form
    back-button
    .row
      .col.header-text Recuperar contraseña
    .row
      .col.intro-description
        p Escribe tu correo electrónico y te enviaremos una clave temporal que luego podrás cambiar

    .row.width-constraint
      form(ng-submit='resetVm.resetPassword()')
        .list
          label.item.item-input
            span.email-left-icon
            input(
              type='email',
              ng-model='resetVm.resetPasswordForm.email'
              required='required'
              placeholder='Correo electrónico'
            )
        .button-actions
          button(
            type='submit'
          ).button.button-full.button-primary.spaced
            | Restablecer contraseña

  .bar.bar-footer.bar-footer-yellow-stripe
