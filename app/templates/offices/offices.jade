ion-view(
  view-title="{{::('office.office'|translate)}}"
)
  ion-nav-title
    .alt-logo
  ion-content
    .row.footer-item-container
      button.button-secondary-yellow(
        ng-click="officesVm.showNewModal()"
      ) {{::("globals.new"|translate)}} {{::("office.office"|translate)}}
    .row.content-office
      .col
        h4.item-title {{::("office.officeAddress"|translate)}}
        hr.line
        .row(ng-repeat='item in officesVm.offices')
          .col
            h5(ng-class="{'content-office-disabled': item.enabled==false}") {{item.direccion}}
              span(ng-show="$first") ({{::("office.officeMatrix"|translate)}})
          .col.text-right
            a.action(ng-click='officesVm.seeMore(item)') {{::("globals.seeMore"|translate)}}


