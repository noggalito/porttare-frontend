ion-view(
  view-title="{{::('office.office'|translate)}}"
)
  ion-nav-title
    .alt-logo
  ion-content.content-office
    .div(ng-class="{'disabled': officesVm.officeDetail.enabled==false}")
      .row
        h4.item-title {{::("office.office"|translate)}}
          span(ng-show="officesVm.officeDetail.enabled") {{::("office.activo"|translate)}}
          span(ng-show="!officesVm.officeDetail.enabled") {{::("office.inactivo"|translate)}}
        ion-toggle.toogle(ng-checked="officesVm.officeDetail.enabled" ng-disabled="true")

      .row
        h2.item-title {{officesVm.officeDetail.direccion}}

      .row
        .col {{::("office.officeLegend"|translate)}}
        .col
          a(ng-class="{'action': officesVm.officeDetail.enabled==true}"
          ng-click="officesVm.officeDetail.enabled && officesVm.showEditModal()") {{::("globals.edit"|translate)}}
        .col
          a.delete(ng-class="{'action': officesVm.officeDetail.enabled==true}") {{::("globals.delete"|translate)}}

      .row
        table.table
          tr
            td.disabled {{::("office.officeNumber"|translate)}}
            td.text-center {{officesVm.officeDetail.id}}
          tr
            td.disabled {{::("office.ciudad"|translate)}}
            td.text-center {{officesVm.officeDetail.ciudad}}
          tr
            td.disabled {{::("office.officeAttention"|translate)}}
            td.text-center {{officesVm.officeDetail.hora_de_apertura|date: "HH:mm a"}}-{{officesVm.officeDetail.hora_de_cierre| date: "HH:mm a"}}



