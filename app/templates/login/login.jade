ion-view(
  view-title="Login",
  hide-nav-bar="true"
)
  ion-content
    back-button
    .row
      .moviggo-logo
    .row
      form.form-container(ng-submit='loginVm.login()')
        .list
          label.item.item-input
            span.email-left-icon
            input(
                type='email',
                ng-model='loginVm.loginForm.email'
                required='required'
                placeholder='{{::("login.email"|translate)}}'
              )
          label.item.item-input
            span.lock-left-icon
            input(
              type='password',
              ng-model='loginVm.loginForm.password',
              required='required',
              placeholder='{{::("login.password"|translate)}}'
            )
        .button-actions
            input(
              type='submit',
              value='{{::("login.login"|translate)}}'
            ).button.button-primary.button-block
    .row.form-container
      a.button.button-clear.button-dark(ui-sref='send') {{::("login.forgotPassword"|translate)}}
    .row.form-container
      .button.facebook-login(ng-click="loginVm.loginWithFB()")
        span.fb-left-icon
        span.fb-copytext {{::("login.continueWithFacebook"|translate)}}
  .bar.bar-footer.bar-footer-send-email
