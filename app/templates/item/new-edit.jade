form.item-form-container(name='form', ng-submit='itemsVm.submitProcess(itemsVm.item.id)', enctype='multipart/form-data', novalidate)
  .list
    span.item-input-label-lg (*) Campo requerido
    label.item.item-input.item-stacked-label
      span.input-label {{::("item.titulo"|translate|uppercase)}}*
      input(
        type='text',
        ng-model='itemsVm.item.titulo',
        required='required',
        ng-class='input-error'
      )
    show-error(array-messages='itemsVm.messages.titulo')

    label.item.item-input.item-stacked-label
      span.input-label {{::("item.descripcion"|translate|uppercase)}}
      input(
        type='text',
        ng-model='itemsVm.item.descripcion'
      )
    show-error(array-messages='itemsVm.messages.descripcion')

    label.item.item-input.item-stacked-label
      span.input-label {{::("item.precio"|translate|uppercase)}}*
      input(
        type='number',
        ng-model='itemsVm.item.precio',
        required='required'
      )
    show-error(array-messages='itemsVm.messages.precio')

    label.item.item-input.item-stacked-label
      span.input-label {{::("item.volumen"|translate|uppercase)}}
      input(
        type='text',
        ng-model='itemsVm.item.volumen'
      )
    show-error(array-messages='itemsVm.messages.volumen')

    label.item.item-input.item-stacked-label
      span.input-label {{::("item.peso"|translate|uppercase)}}
      input(
        type='text',
        ng-model='itemsVm.item.peso'
      )
    show-error(array-messages='itemsVm.messages.peso')
    //- Pending upload image
    label.item.item-input.item-stacked-label
      span.input-label {{::("item.imagen"|translate|uppercase)}}
      input(
        name='imagen',
        type='file'
      )
    show-error(array-messages='itemsVm.messages.imagen')

    label.item.item-input.item-stacked-label
      span.input-label {{::("item.observaciones"|translate|uppercase)}}
      input(
        type='text',
        name='ob',
        ng-model='itemsVm.item.observacion'
      )
    show-error(array-messages='itemsVm.messages.observacion')

    label.item.item-input.item-select
          .input-label {{::("item.unidadMedida"|translate|uppercase)}}
          select(ng-model='itemsVm.item.unidad_medida')
            option(selected='' value='volumen') Volumen
            option(value='unidades') Unidades
            option(value='peso') Peso
            option(value='longitud') Longitud
    show-error(array-messages='itemsVm.messages.unidad_medida')

  .button-actions
    input(
      type='submit',
      value='{{::("globals.save"|translate)}} {{::("item.item"|translate)}}'
    ).button.button-primary.button-block
