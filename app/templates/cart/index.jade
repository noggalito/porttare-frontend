ion-view(
  view-title='{{::("menu.client.cart"|translate)}}'
)
  ion-nav-title
    .alt-logo
  ion-content.cart-page
    .item(ng-repeat="item in cartVm.cart.customer_order_items track by $index")
      | {{item.cantidad}} {{item.provider_item.titulo}}
  ion-footer-bar.cart-page-footer
    action-button(
      on-click="cartVm.buyItems()"
      text="{{::('cart.buyItems'|translate)}}"
    )
    .total
      | (Subtotal)
      span.value
        | {{cartVm.total | currency}}
