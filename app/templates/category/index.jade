ion-view(
  view-title='{{::("menu.category"|translate)}}'
)
  ion-nav-title
    .alt-logo

  //- cart
  ion-nav-buttons(side="right")
    button.cart-main-button(
      ui-sref='app.cart.index'
      ng-if='menuVm.existCartActive'
    ) {{menuVm.numberItems}}
      i.ion-ios-cart-outline

  ion-content
    .grid-parent
      a.grid-content(ng-repeat="category in categoryVm.categories()"
                    ng-class="categoryVm.categoryGridClassFor($index, $last)"
                    ui-sref="app.categories.show({id: category.id})"
                    style="background-image: url('{{category.imagen_url|defaultImage}}')")
        .title.grid-text-shadow {{category.titulo}}
